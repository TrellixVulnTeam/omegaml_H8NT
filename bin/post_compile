if [[ -f pip-reinstall.txt ]]; then
   pip uninstall -y -r pip-reinstall.txt 
   pip install -r requirements.txt  --exists-action=w
   pip install -r pip-requirements.extra --exists-action=w
fi

if [[ -z "$APP" ]] || [[ $APP == "omegaml" ]]; then
   pip install -U jupyterhub==0.8.1 "tornado<5"
   python manage.py collectstatic --noinput
fi

# this should no longer be required
# pip install -U "tornado<5" "pip<10"
if [[ $APP == "omjobs" ]]; then
   echo "omjobs installation finished. now starting up"
fi

